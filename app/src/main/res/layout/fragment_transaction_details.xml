<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.main_app.transaction_details.TransactionDetailsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:transitionName="toolbar_receipt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back_24"
        app:title="Transaction Receipt"
        app:titleCentered="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/receipt_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layoutAnimation="@anim/layout_animation"
        android:padding="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/mailsansroman_demibold"
                android:gravity="center"
                android:text="Transaction Receipt"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date_generated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/mailsansroman_demibold"
                android:gravity="center"
                android:text="Generated from AccessMore on 16/01/2024 18:31:05"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/grey"
                android:paddingTop="10dp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View
                    android:id="@+id/divider_line"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="90dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/trans_amount_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Transaction Amount"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="N 3,0000.75"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/div_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/trans_amount_label" />

                <TextView
                    android:id="@+id/Transaction_type_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Transaction Type"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div_one" />

                <TextView
                    android:id="@+id/trans_type_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="INTER-BANK FUNDS TRANSFER"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toBottomOf="@id/div_one" />

                <View
                    android:id="@+id/div_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/trans_type_value" />

                <TextView
                    android:id="@+id/Transaction_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Transaction Date"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div_two" />

                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="2024-01-16 15:19:30"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toBottomOf="@id/div_two" />

                <View
                    android:id="@+id/div_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/Transaction_date_label" />

                <TextView
                    android:id="@+id/sender_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Sender"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div_3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Kelvin Iyalo"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toBottomOf="@id/div_3" />

                <View
                    android:id="@+id/div_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/sender_label" />

                <TextView
                    android:id="@+id/beneficiary_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Beneficiary"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div_4" />

                <TextView
                    android:id="@+id/beneficiary_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="ICE-CREAM PALOUR\n 00022233445\n ZENITH BANK PLC"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toBottomOf="@id/div_4" />

                <View
                    android:id="@+id/div_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/beneficiary_value" />

                <TextView
                    android:id="@+id/remark_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Remark"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div_5" />

                <TextView
                    android:id="@+id/remark_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toBottomOf="@id/div_5" />

                <View
                    android:id="@+id/div_6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/remark_value" />

                <TextView
                    android:id="@+id/transref_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Transaction Reference"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div_6" />

                <TextView
                    android:id="@+id/trans_ref_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="4389938355432483674444"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toBottomOf="@id/div_6" />

                <View
                    android:id="@+id/div_7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/transref_label" />

                <TextView
                    android:id="@+id/trans_stausf_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Transaction Status"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@id/divider_line"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div_7" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/mailsansroman_demibold"
                    android:padding="5dp"
                    android:text="Successful"
                    android:textColor="@color/teal_700"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/divider_line"
                    app:layout_constraintTop_toBottomOf="@id/div_7" />

                <View
                    android:id="@+id/div_8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/trans_stausf_label" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/footer_msg"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@id/div_8" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/proceed_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/teal_700"
        android:padding="16dp"
        android:text="Download Receipt"
        android:textAllCaps="false"
        android:transitionName="transfer_btn"
        app:background="@drawable/background_two_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/receipt_card" />

</LinearLayout>